{% extends "@bootstrap_barrio/layout/page.html.twig" %}
{% block head %}
<header id="navbar" role="banner" class="{{ navbar_classes }}">
  <div class="top-header-container">
    <div class="top-header-content row">
      <div class="header-logo">
        {{ page.top_header_logos }}
      </div>
      <div class="push-right">
        <div class="font-size-print">
          <span class="a_small"><a title="Smaller text" onclick="zoomSmall()">a</a></span>
          <span class="a_medium"><a title="Optimised defaults" onclick="zoomMedium()">a</a></span>
          <span class="a_big"><a title="Bigger text" onclick="zoomBig()">a</a></span>
          <a href="#" onclick="if(window.print)window.print();" class="print-friendly" title="Print page"></a>
        </div>
        <div class="header-menu-news">
          {{ page.header }}
        </div>
        <div class="header-blocks">
          {{ page.header_form }}
        </div>
      </div>
    </div>
  </div>
   <nav{{ navbar_attributes }}>
      {% if page.primary_menu %}
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#CollapsingNavbar" aria-controls="CollapsingNavbar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="collapse navbar-collapse" id="CollapsingNavbar">
            {{ page.primary_menu }}
        </div>
      {% endif %}
      {% if sidebar_collapse %}
        <button class="navbar-toggler navbar-toggler-left collapsed" type="button" data-toggle="collapse" data-target="#CollapsingLeft" aria-controls="CollapsingLeft" aria-expanded="false" aria-label="Toggle navigation"></button>
      {% endif %}
    </nav>
</header>
{% endblock %}

{% block content %}
  <div class="breadcrumb-fluid">
    <div class="container"> {{ page.breadcrumb }}</div>
  </div>
<div class="container">
  <div class="row">
    {% set has_sidebar_first = page.sidebar_first|render|striptags|trim is not empty %}
    {% set has_sidebar_second = page.sidebar_second|render|striptags|trim is not empty %}
    {% if has_sidebar_first %}
      <aside class="section col-12 col-lg-3" role="complementary">
        {{ page.sidebar_first }}
      </aside>
    {% endif %}
    {% if not has_sidebar_first and not has_sidebar_second %}
      <div id="main" class="col-12 col-md-12 one-column">
    {% endif %}
    {% if has_sidebar_first and not has_sidebar_second %}
      <div id="main" class="col-12 col-lg-9 two-column mx-auto">
    {% endif %}
    {% if not has_sidebar_first and has_sidebar_second %}
      <div id="main" class="col-12 col-lg-9 two-column mx-auto">
    {% endif %}
    {% if has_sidebar_first and has_sidebar_second %}
      <div id="main" class="col-12 col-lg-6 three-column mx-auto">
    {% endif %}
        <section class="section">
          <a id="main-content" tabindex="-1"></a>
          {{ page.content }}
        </section>
      </div>
    {% if has_sidebar_second %}
      <aside class="section col-12 col-lg-3 sidebar-second" role="complementary">
        <h2 class="related">{{ 'Related' | trans }}</h2>
        {{ page.sidebar_second }}
      </aside>
    {% endif %}
    </div>
</div>
{% endblock %}

{% block footer %}
  <div class="{{ container }}" >
    {% if page.footer_end %}
      <div class="site-footer__bottom">
        {{ page.footer_end }}
      </div>
    {% endif %}
  </div>
{% endblock %}
